          <input type="hidden" name="releaseDate" value="<%= movie.release_date %>" />
          <input type="hidden" name="overview" value="<%= movie.overview %>" />
          <input type="hidden" name="voteAverage" value="<%= movie.vote_average %>" />
          <input type="hidden" name="voteCount" value="<%= movie.vote_count %>" />
          <input type="hidden" name="popularity" value="<%= movie.popularity %>" />
          <input type="hidden" name="poster" value="<%= movie.poster_path %>" />

          <!-- Share button submits this form -->
          <button class="bookmark-btn" type="submit" data-movieid="<%= movie.id %>"><i
              data-type="bookmark" class='bx bxs-bookmark-star'></i></button>
        </form>
        <button><i data-type="share" class='bx bxs-share'></i></button>
      </div>
    <% } %>
